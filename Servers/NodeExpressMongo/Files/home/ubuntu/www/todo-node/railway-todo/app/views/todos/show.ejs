<div class="page-header">
  <h1>Details of todo</h1>
</div>

<div about="<%= path_to.todo(todo) %>">
  <div property="content"><%= todo.content %></div>
  <div property="done"><%= todo.done %></div>
</div>

<div class="actions">
  <%- link_to('Edit', path_to.edit_todo(todo), {class: 'btn primary'}) %>
  <%- link_to('Delete', path_to.todo(todo), {class: 'btn danger', method: 'delete', remote: true, jsonp: '(function (u) { location.href = u; })'}) %>
  or
  <%- link_to('Back to index', path_to.todos) %>
</div>
